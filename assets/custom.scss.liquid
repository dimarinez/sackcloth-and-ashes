/*menu toggle*/

.menu-toggle-wrap {
	width: 48px;
	height: 48px;

	.menu-toggle-label {
		display: block;
		position: relative;
    width: 100%;
    transform: scale(1.1);
		height: 100%;
		cursor: pointer;
    transition: opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
    
    @media screen and (min-width: 749px) {
      transform: scale(1.3);
    }
	}

	.menu-toggle-bread {
		position: absolute;
		z-index: 3;
		top: 9px;
		left: 9px;
		width: 30px;
		height: 30px;
		transition: opacity 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);

		&.menu-toggle-bread-top {
			transition: transform .1800s cubic-bezier(0.04, 0.04, 0.12, 0.96);
			transform: none;
			z-index: 4;
		}

		&.menu-toggle-bread-bottom {
			transition: transform .1800s cubic-bezier(0.04, 0.04, 0.12, 0.96);
			transform: none;
		}
	}

	.menu-toggle-bread-crust {
		display: block;
		width: 17px;
    height: 1px;
    outline: #000000 solid 1px;
		background: #000000;
		position: absolute;
		left: 7px;
		z-index: 1;

		&.menu-toggle-bread-crust-top {
			top: 14px;
			transform: translateY(-3px);
			transition: transform .1600s cubic-bezier(0.52, 0.16, 0.52, 0.84) .1000s;
		}

		&.menu-toggle-bread-crust-bottom {
			bottom: 14px;
			transform: translateY(3px);
			transition: transform .1600s cubic-bezier(0.52, 0.16, 0.52, 0.84) .1000s;
		}
	}
}

.mobile-nav--close {
  &.site-header__menu {
    .menu-toggle-label {
      .menu-toggle-bread-top {
        transition: transform .3200s cubic-bezier(0.04, 0.04, 0.12, 0.96) .1000s;
        transform: rotate(45deg);
      }
  
      .menu-toggle-bread-bottom {
        transition: transform .3200s cubic-bezier(0.04, 0.04, 0.12, 0.96) .1000s;
        transform: rotate(-45deg);
      }
  
      .menu-toggle-bread-crust-top {
        transition: transform .1800s cubic-bezier(0.04, 0.04, 0.12, 0.96);
        transform: none;
      }
  
      .menu-toggle-bread-crust-bottom {
        transition: transform .1800s cubic-bezier(0.04, 0.04, 0.12, 0.96);
        transform: none;
      }
    }
  }
}


