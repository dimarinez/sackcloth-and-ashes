.mobile-collection-nav {
  margin-bottom: 35px;

  .mobile-nav-title--caret {
    position: absolute;
    left: auto;
    top: 0;
    padding: 15px 20px;
    right: 0;

    svg {
      transition: transform .4s cubic-bezier(.38,.41,.27,1);
    }
  }

  .mobile-nav-title--container {
    padding: 18px 20px;
    border-style: solid;
    border-width: 1px 0;
    position: relative;
    cursor: pointer;

    &.is-expanded {
      svg {
        transform: rotate(180deg);
      }
    }
  }

  .mobile-nav-title {
    margin-bottom: 0;
  }

  .mobile-collection-nav-inner {
    transition: max-height 0.45s cubic-bezier(0.29, 0.63, 0.44, 1);
    overflow: hidden;

    .collection-nav-link {
      padding: 15px 20px;
      border-bottom: 1px solid #ededed;
      cursor: pointer;

      &.link-active {
        opacity: 0.5;
      }
    }
  }
}

